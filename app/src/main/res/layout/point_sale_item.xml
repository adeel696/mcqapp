<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_4sdp"
    app:elevation="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/_2sdp"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineL"
            style="@style/GuideLineSize"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineR"
            style="@style/GuideLineSize"
            app:layout_constraintGuide_percent="0.96"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_city"
            app:layout_constraintStart_toStartOf="@id/guidelineL"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_city"
            android:layout_marginTop="@dimen/_4sdp"
            />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            tools:text="CONCOURS DIRECTS"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_city"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_name"
            app:layout_constraintStart_toStartOf="@id/guidelineL"
            app:layout_constraintTop_toBottomOf="@+id/iv_city"
            app:srcCompat="@drawable/ic_directions"
            android:layout_marginTop="@dimen/_4sdp"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            tools:text="CONCOURS DIRECTS"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_name"
            app:layout_constraintTop_toTopOf="@+id/iv_name"
            android:layout_marginStart="@dimen/_4sdp"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_address"
            app:layout_constraintStart_toStartOf="@id/guidelineL"
            app:layout_constraintTop_toBottomOf="@+id/iv_name"
            app:srcCompat="@drawable/ic_address"
            android:layout_marginTop="@dimen/_4sdp"
            />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            tools:text="CONCOURS DIRECTS"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_address"
            app:layout_constraintTop_toTopOf="@+id/iv_address"
            android:layout_marginStart="@dimen/_4sdp"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_phone1"
            app:layout_constraintStart_toStartOf="@id/guidelineL"
            app:layout_constraintTop_toBottomOf="@+id/iv_address"
            app:srcCompat="@drawable/ic_phone"
            android:layout_marginTop="@dimen/_4sdp"
            />

        <TextView
            android:id="@+id/tv_phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            tools:text="CONCOURS DIRECTS"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_phone1"
            app:layout_constraintTop_toTopOf="@+id/iv_phone1"
            android:layout_marginStart="@dimen/_4sdp"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_phone2"
            app:layout_constraintStart_toStartOf="@id/guidelineL"
            app:layout_constraintTop_toBottomOf="@+id/iv_phone1"
            app:srcCompat="@drawable/ic_phone"
            android:layout_marginTop="@dimen/_4sdp"
            />

        <TextView
            android:id="@+id/tv_phone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            tools:text="CONCOURS DIRECTS"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_phone2"
            app:layout_constraintTop_toTopOf="@+id/iv_phone2"
            android:layout_marginStart="@dimen/_4sdp"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_phone3"
            app:layout_constraintStart_toStartOf="@id/guidelineL"
            app:layout_constraintTop_toBottomOf="@+id/iv_phone2"
            app:srcCompat="@drawable/ic_phone"
            android:layout_marginTop="@dimen/_4sdp"
            />

        <TextView
            android:id="@+id/tv_phone3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            tools:text="CONCOURS DIRECTS"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_phone3"
            app:layout_constraintTop_toTopOf="@+id/iv_phone3"
            android:layout_marginStart="@dimen/_4sdp"
            />






    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>