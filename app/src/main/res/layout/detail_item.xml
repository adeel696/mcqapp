<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_4sdp"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    app:elevation="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_8sdp"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineL"
            style="@style/GuideLineSize"
            app:layout_constraintGuide_percent="0.04"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineR"
            style="@style/GuideLineSize"
            app:layout_constraintGuide_percent="0.96"
            />


        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guidelineL"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/question" />



        <io.github.kexanie.library.MathView
            android:id="@+id/tv_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guidelineL"
            app:layout_constraintEnd_toEndOf="@+id/guidelineR"
            app:layout_constraintTop_toBottomOf="@+id/tv_question_title"
            android:layout_marginTop="@dimen/_8sdp"
            auto:engine="MathJax"
            />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/iv_question"
            app:layout_constraintStart_toStartOf="@+id/tv_question"
            app:layout_constraintTop_toBottomOf="@+id/tv_question"
            android:layout_marginTop="2dp"
            android:src="@drawable/logo"
            android:visibility="invisible"
            />



        <TextView
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/guidelineL"
            app:layout_constraintTop_toBottomOf="@+id/iv_question"
            android:layout_marginTop="@dimen/_14sdp"
            android:textSize="@dimen/_14sdp"
            android:text="A)" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_tick1"
            app:layout_constraintEnd_toEndOf="@id/tv_option1"
            app:layout_constraintTop_toTopOf="@+id/tv_option1"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_tick"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_cross1"
            app:layout_constraintEnd_toEndOf="@id/tv_option1"
            app:layout_constraintTop_toTopOf="@+id/tv_option1"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_cross"
            />



        <io.github.kexanie.library.MathView
            android:id="@+id/tv_option1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/option1"
            app:layout_constraintEnd_toEndOf="@id/guidelineR"
            app:layout_constraintTop_toBottomOf="@+id/iv_question"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_18sdp"
            auto:engine="MathJax"
            />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/iv_option1"
            app:layout_constraintStart_toStartOf="@+id/tv_option1"
            app:layout_constraintTop_toBottomOf="@+id/tv_option1"
            android:layout_marginTop="2dp"
            android:src="@drawable/logo"
            android:visibility="invisible"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_tick2"
            app:layout_constraintEnd_toEndOf="@id/tv_option2"
            app:layout_constraintTop_toTopOf="@+id/tv_option2"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_tick"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_cross2"
            app:layout_constraintEnd_toEndOf="@id/tv_option2"
            app:layout_constraintTop_toTopOf="@+id/tv_option2"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_cross"
            />



        <TextView
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/guidelineL"
            app:layout_constraintTop_toBottomOf="@+id/tv_option1"
            android:layout_marginTop="@dimen/_14sdp"
            android:textSize="@dimen/_14sdp"
            android:text="B)" />

        <io.github.kexanie.library.MathView
            android:id="@+id/tv_option2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/option2"
            app:layout_constraintEnd_toEndOf="@id/guidelineR"
            app:layout_constraintTop_toBottomOf="@+id/tv_option1"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_18sdp"
            auto:engine="MathJax"
            />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/iv_option2"
            app:layout_constraintStart_toStartOf="@+id/tv_option2"
            app:layout_constraintTop_toBottomOf="@+id/tv_option2"
            android:layout_marginTop="2dp"
            android:src="@drawable/logo"
            android:visibility="invisible"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_tick3"
            app:layout_constraintEnd_toEndOf="@id/tv_option3"
            app:layout_constraintTop_toTopOf="@+id/tv_option3"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_tick"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_cross3"
            app:layout_constraintEnd_toEndOf="@id/tv_option3"
            app:layout_constraintTop_toTopOf="@+id/tv_option3"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_cross"
            />

        <TextView
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/guidelineL"
            app:layout_constraintTop_toBottomOf="@+id/tv_option2"
            android:layout_marginTop="@dimen/_14sdp"
            android:textSize="@dimen/_14sdp"
            android:text="C)" />

        <io.github.kexanie.library.MathView
            android:id="@+id/tv_option3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/option3"
            app:layout_constraintEnd_toEndOf="@id/guidelineR"
            app:layout_constraintTop_toBottomOf="@+id/tv_option2"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_18sdp"
            auto:engine="MathJax"
            />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/iv_option3"
            app:layout_constraintStart_toStartOf="@+id/tv_option3"
            app:layout_constraintTop_toBottomOf="@+id/tv_option3"
            android:layout_marginTop="2dp"
            android:src="@drawable/logo"
            android:visibility="invisible"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_tick4"
            app:layout_constraintEnd_toEndOf="@id/tv_option4"
            app:layout_constraintTop_toTopOf="@+id/tv_option4"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_tick"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_cross4"
            app:layout_constraintEnd_toEndOf="@id/tv_option4"
            app:layout_constraintTop_toTopOf="@+id/tv_option4"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_cross"
            />

        <TextView
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/guidelineL"
            app:layout_constraintTop_toBottomOf="@+id/tv_option3"
            android:layout_marginTop="@dimen/_14sdp"
            android:textSize="@dimen/_14sdp"
            android:text="D)" />

        <io.github.kexanie.library.MathView
            android:id="@+id/tv_option4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/option4"
            app:layout_constraintEnd_toEndOf="@id/guidelineR"
            app:layout_constraintTop_toBottomOf="@+id/tv_option3"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_18sdp"
            auto:engine="MathJax"
            />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/iv_option4"
            app:layout_constraintStart_toStartOf="@+id/tv_option4"
            app:layout_constraintTop_toBottomOf="@+id/tv_option4"
            android:layout_marginTop="2dp"
            android:src="@drawable/logo"
            android:visibility="invisible"
            />










    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>