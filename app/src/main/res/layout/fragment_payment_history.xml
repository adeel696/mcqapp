<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.Trainings">



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineL"
        style="@style/GuideLineSize"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineR"
        style="@style/GuideLineSize"
        app:layout_constraintGuide_percent="0.98"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH"
        style="@style/GuideLineSizeHorizotal"
        app:layout_constraintGuide_percent="0.7" />


    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineL"
        app:layout_constraintEnd_toEndOf="@id/guidelineR"
        android:textSize="@dimen/_16sdp"
        android:textColor="@android:color/black"
        android:text="@string/title_training"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_8sdp"
        />

    <TextView
        android:id="@+id/tv_time_spend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_16sdp"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="00:00:00"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_training_online"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:textSize="@dimen/_16sdp"
        android:text="@string/training_online"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_4sdp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/guidelineL"
        app:layout_constraintEnd_toEndOf="@id/guidelineR"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_title"
        />

    <com.mindorks.placeholderview.ExpandablePlaceHolderView
        android:id="@+id/rv_mcqHistoryD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/guidelineL"
        app:layout_constraintEnd_toEndOf="@id/guidelineR"
        app:layout_constraintTop_toBottomOf="@id/tv_training_online"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH"
        android:layout_marginTop="@dimen/_4sdp"
        tools:listitem="@layout/mcq_history_child"
        android:scrollbars="vertical"
        app:layout_constrainedHeight="true"
        android:visibility="gone"
        >
    </com.mindorks.placeholderview.ExpandablePlaceHolderView>


    <TextView
        android:id="@+id/tv_training_type"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:textSize="@dimen/_16sdp"
        android:text="@string/training_face"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_4sdp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="@id/guidelineL"
        app:layout_constraintEnd_toEndOf="@id/guidelineR"
        app:layout_constraintTop_toBottomOf="@+id/rv_mcqHistoryD"
        />

    <TextView
        android:id="@+id/tv_point_sale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_training_type"
        app:layout_constraintStart_toStartOf="@id/guidelineL"
        app:layout_constraintEnd_toEndOf="@id/guidelineR"
        android:textSize="@dimen/_12sdp"
        android:textColor="@android:color/black"
        android:text="@string/training_desc"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_4sdp"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_point_sale"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/guidelineL"
        app:layout_constraintEnd_toEndOf="@id/guidelineR"
        app:layout_constraintTop_toBottomOf="@+id/tv_point_sale"
        app:layout_constraintBottom_toTopOf="@+id/tv_footer"
        tools:listitem="@layout/point_sale_item"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/_6sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:text="@string/copyright_text"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>