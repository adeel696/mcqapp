<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_4sdp"
    app:elevation="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/_8sdp"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineL"
            style="@style/GuideLineSize"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineR"
            style="@style/GuideLineSize"
            app:layout_constraintGuide_percent="0.96"
            />





        <TextView
            android:id="@+id/tv_mcqType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            tools:text="CONCOURS DIRECTS"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/btn_subscribe"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:text="@string/subscribe_offer"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/round_btn"
            app:layout_constraintStart_toStartOf="@+id/tv_mcqType"
            app:layout_constraintTop_toBottomOf="@+id/tv_mcqType"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>